.tabs

	&__header
		display flex
		justify-content center
		border-bottom 1px solid #E4E4E4
		
		&-item
			position relative
			padding-bottom 15px
			font-size 2.2rem
			trs()
			
			&:hover
				cursor pointer
			
			&:not(:last-child)
				margin-right 35px

			&--active
				text-shadow: 1px 0 0 grey
					
				&::after
					content ''
					position absolute
					bottom -1px
					left 0
					width 100%
					height 2px
					background-color orange

	&__content 
		display none
		padding-top 50px
		
		&--active
			display block
	