.index-page
	
	&__plus
		padding-bottom 15px
		
		&-list 
			display flex
			justify-content space-between
			align-items flex-start
			flex-wrap wrap
			
		&-item
			margin-top 50px
			
			&-icon,
			&-title
				display inline-block
				vertical-align middle

			&-icon
				height 62px
				width 62px
				margin-right 15px
				fill brown-light

			&-title
				font 400 2.4rem/2.4rem font-decor
				color grey-dark
	

	&__constructor
		padding-top 175px
		padding-bottom 225px
		background url('../img/constructor-bg.png') no-repeat center/cover
		
		&-title
			margin-bottom 15px
			font 700 5.5rem/6rem font-second
			color brown

		&-descr
			margin-bottom 30px
			font 400 3rem/1 font-decor
			color brown
	

	&__sort
		padding-top 45px
		padding-bottom 95px
		
		&-decor 
			display block
			width 190px
			height 60px
			margin auto
			margin-bottom 15px
			fill brown-light
		
		&-wrap
			position relative
			

	&__hit
		padding-bottom 65px
		
		&-wrap
			position relative


	.catalog
		padding-top 45px


	+width-sm()
	
		&__plus
			display none
			
		&__sort
			
			&-decor
				width 98px
				height 31px
				margin-bottom 20px
			
			.headline 
				position relative
				
				svg
					position absolute
					top -38px
					display inline-block
					width 81px
					height 5px
				
					&:first-of-type
						left calc(50% - 150px)
				
					&:last-of-type
						right calc(50% - 150px)
				
	
		&__constructor
			padding-top 120px
			padding-bottom 280px
			background-image url('../img/constructor-bg-sm.jpg')
			
			&-title
				font-size 3.2rem
				line-height 4.2rem
				
			&-descr
				font-size 2.2rem
				line-height 2.6rem




