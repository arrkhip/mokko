.index-page
	
	&__plus
		padding-bottom 60px
		
		&-list 
			display flex
			justify-content space-between
			align-items flex-start
			flex-wrap wrap
			
		&-item
			margin-top 50px
			
			&-icon,
			&-title
				display inline-block
				vertical-align middle

			&-icon
				height 62px
				width 62px
				margin-right 15px
				fill: brown-light

			&-title
				font: 400 2.4rem/2.4rem font-decor
				color: grey-dark

 	 	

 	 	