.index-page
	
	&__plus
		padding-bottom 60px
		
		&-list 
			display flex
			justify-content space-between
			align-items flex-start
			flex-wrap wrap
			
		&-item
			margin-top 50px
			
			&-icon,
			&-title
				display inline-block
				vertical-align middle

			&-icon
				height 62px
				width 62px
				margin-right 15px
				fill brown-light

			&-title
				font 400 2.4rem/2.4rem font-decor
				color grey-dark
	
	&__constructor
		padding-top 175px
		padding-bottom 225px
		background url('../img/constructor-bg.png') no-repeat center/cover
		
		&-title
			margin-bottom 15px
			font 700 5.5rem/6rem font-second
			color brown

		&-descr
			margin-bottom 30px
			font 400 3rem/1 font-decor
			color brown
	
	&__sort
		
		.grid
		
		&-slider
			position relative
		
			&-arrow
				position absolute
				top 50%
				width 65px
				height 65px
				border-radius 50%
				background-color orange
				z-index 2

				&--prev
					left 0
					transform translate(-50%, -50%)
					
				&--next
					right 0
					transform translate(50%, -50%)
		

	+width-sm()
	
		&__constructor
			padding-top 120px
			padding-bottom 280px
			background-image url('../img/constructor-bg-sm.jpg')
			
			&-title
				font-size 3.2rem
				line-height 4.2rem
				
			&-descr
				font-size 2.2rem
				line-height 2.6rem




