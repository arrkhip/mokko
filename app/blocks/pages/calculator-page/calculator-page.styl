.calculator-page
	
	.step
		margin-bottom 40px
	
	&__list
		display flex
		flex-wrap wrap
		align-items flex-start
		
	&__card
		width 100%
		max-width 170px
		margin-right 30px
		margin-bottom 35px
		
		&:nth-child(6n)
			margin-right 0
		
		&-banner
			position relative
			width 100%
			max-height 135px
			border-radius 15px
			margin-bottom 10px
			overflow hidden
			box-shadow 0px 3px 15px rgba(0, 0, 0, 0.16)
			trs()
			
			&:hover
				cursor pointer

			img
				width 100%
				height 100%
				object-fit cover	
					
		&-title
			font-size 1.6rem
			line-height 2.4rem
		
		&-icon
			position absolute
			top 0
			left 0
			display flex
			justify-content center
			align-items center
			width 100%
			height 100%
			border-radius 15px
			background-color rgba(243, 156, 18, .75)
			transform scale(0)
			opacity 0
			trs(all .25s)
				
			svg
				width 53px
				height 41px
				fill #FFF
				
		&.active
			
			.calculator-page__card-icon
				transform scale(1)
				opacity 1
				
	&__controls 
		padding-top 20px
		
		.btn:first-child
			margin-right 35px
			
	&__subtitle
		margin-bottom 15px
		font-size 2.2rem
		line-height 2.4rem
		font-weight 600
		
		& + .calculator-page__list
			padding-top 10px
		

	&__weight
		padding-bottom 50px

	+width-lg()
	
		&__card
			margin-right 20px
			
			&:nth-child(6n)
				margin-right 20px
				
			&:nth-child(5n)
				margin-right 0
				

	+width-md()
	
		&__card
			max-width 120px
			margin-right 22px
			margin-bottom 25px
			
			&:nth-child(6n)
				margin-right 22px
				

	+width-sm()
		
		&__card
			max-width calc(25% - 12px)
			margin-right 12px !important
			
			&:nth-child(5n)
				margin-right 9px
				
			&:nth-child(4n)
				margin-right 0
		
		&__controls
			display flex
			flex-direction column
			align-items center
			
			.btn:first-child
				margin-right 0
				margin-bottom 20px

	+width-xs()
		
		&__card
			max-width calc(33% - 8px)
			margin-right 9px !important
			
				
			&:nth-child(3n)
				margin-right 0
			