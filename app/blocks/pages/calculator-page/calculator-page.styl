.calculator-page
	
	.step
		margin-bottom 40px
		padding-top 50px
		
		&--pt0
			padding-top 0
	
	&__list
		display flex
		flex-wrap wrap
		align-items flex-start
		
		& + .calculator-page__controls
			padding-top 15px
		
	&__card
		width 100%
		max-width 170px
		margin-right 30px
		margin-bottom 35px
		
		&:nth-child(6n)
			margin-right 0
		
		&-banner
			position relative
			width 100%
			max-height 135px
			border-radius 15px
			margin-bottom 10px
			overflow hidden
			box-shadow 0px 3px 15px rgba(0, 0, 0, 0.16)
			trs()
			
			&:hover
				cursor pointer

			img
				width 100%
				height 100%
				object-fit cover	
					
		&-title
			font-size 1.6rem
			line-height 2.4rem
		
		&-icon
			position absolute
			top 0
			left 0
			display flex
			justify-content center
			align-items center
			width 100%
			height 100%
			border-radius 15px
			background-color rgba(243, 156, 18, .75)
			transform scale(0)
			opacity 0
			trs(all .25s)
				
			svg
				width 53px
				height 41px
				fill #FFF
				
		&--active
			
			.calculator-page__card-icon
				transform scale(1)
				opacity 1
				
	&__controls 
		padding-top 45px
		
		.btn:first-child
			margin-right 35px
			
	&__subtitle
		margin-bottom 15px
		font-size 2.2rem
		line-height 2.4rem
		font-weight 600
		
		& + .calculator-page__list
			padding-top 10px
		

	&__weight
		display flex
		align-items flex-end
		padding-bottom 50px
		
		&-info
			margin-right 60px
			
			p 
				line-height 1.2em
				
	&__range
		display flex
		justify-content center
		align-items center
		width 100%
		max-width 660px

		&-line
			position relative
			width calc(100% - 115px)
			height 1px
			margin 0 auto
			background-color #D8D8D8
			
		&-val
			font-weight 600
			
		.ui-slider-handle
			position absolute
			top -28px
			left 0
			z-index 1
			outline none
			text-align center
			transform translateX(-50%)
			
		&-icon
			width 35px
			height 43px
			fill brown
			trs()
			
			&:hover,
			&:active
				cursor pointer
				fill orange
  
		&-result 
			display block
			margin-top 10px
			font-weight 600

		
	&__file
		display flex
		justify-content space-between
		align-items center
		padding-top 25px
		
		p 
			font-style italic
			line-height 2.4rem
			
	&__form
		
		.input,
		.textarea
			width 100%
			max-width 570px
			margin-top 25px
			
		.input
			margin-bottom 60px
			
		span
			display inline-block
			margin-top 38px
			margin-left 25px
			font-style italic
	
	&__total
		
		&-list
			margin-bottom 55px
			
			li 
				line-height 1.2em
				
				&:not(:last-child)
					margin-bottom 25px
					
				span 
					font-weight 600
			
		&-form
			display flex
			
			.input
				width 100%
				max-width 335px
				margin-right 30px
			
			.btn 
				max-width 305px
			

	+width-lg()
	
		&__card
			margin-right 20px
			
			&:nth-child(6n)
				margin-right 20px
				
			&:nth-child(5n)
				margin-right 0
				

	+width-md()
	
		&__card
			max-width 120px
			margin-right 22px
			margin-bottom 25px
			
			&:nth-child(6n)
				margin-right 22px
		
		&__form span
			margin-left 0
			margin-top -50px
			
		&__weight
			flex-direction column
			align-items flex-start
			
			&-info
				margin-bottom 35px
		
		&__total	
			
			&-form
				flex-direction column
				
				.input
					max-width 600px
					margin-right 0
					margin-bottom 20px
			
				

	+width-sm()
		
		&__card
			max-width calc(25% - 12px)
			margin-right 12px !important
			
			&:nth-child(5n)
				margin-right 9px
				
			&:nth-child(4n)
				margin-right 0
		
		&__controls
			display flex
			flex-direction column
			align-items center
			
			.btn:first-child
				margin-right 0
				margin-bottom 20px
				
		&__file
			flex-direction column
			align-items flex-start
			
			p 
				margin-bottom 5px
		
		&__total	
			
			&-form
				align-items center
				
	+width-xs()
		
		&__card
			max-width calc(33% - 8px)
			margin-right 9px !important
			
				
			&:nth-child(3n)
				margin-right 0
			