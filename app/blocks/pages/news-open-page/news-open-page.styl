.news-open-page

	&__banner
		max-width 365px
		border-radius 15px
		background #FFF
		box-shadow 0px 3px 15px rgba(0, 0, 0, 0.16)
		overflow hidden
		
	&__info
		padding-top 40px
		padding-bottom 50px
		
		p
			line-height 2.6rem
			color #272727

			&:not(:last-child)
				margin-bottom 25px
				
	&__gallery
		display flex
		flex-wrap wrap
		justify-content space-between
		align-items flex-start
		
		&-item 
			position relative
			width 100% 
			max-width 370px
			margin-bottom 25px
			border-radius 15px
			overflow hidden
			box-shadow 3px 2px 15px 0px rgba(0, 0, 0, 0.22)
			
			span
				content ''
				position absolute
				top 0
				left 0
				height 100%
				width 100%
				padding-top 17px
				padding-left 17px
				background-color: rgba(0, 0, 0, .3)
				transform scale(0)
				opacity 0
				trs(all .3s)
				
			svg 
				width 35px
				height 35px
				fill #FFF
				
			&:hover span
				transform scale(1)
				opacity 1
				

	+width-md()
		
		&__gallery-item
			max-width 330px
			

	+width-sm()
	
		&__gallery
			flex-direction column
			align-items center
			
			&-item
				max-width 420px
			