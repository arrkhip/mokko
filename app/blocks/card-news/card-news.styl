.card-news
	position relative
	width 100%
	max-width 370px
	border-radius 15px
	background #FFF
	box-shadow 0px 3px 15px rgba(0, 0, 0, 0.16)

	&__link
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		
	&__banner
		height 212px
		border-radius 15px 15px 0px 0px
		
		img
			width 100%
			height 100%
			object-fit cover
		
	&__sale
		position absolute
		top 32px
		right 32px
		font 700 3rem/1 font-second
		color #08829b

	&__descr
		padding 20px
		font-weight 600
		line-height 1.9rem
