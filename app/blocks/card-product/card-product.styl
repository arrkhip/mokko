.card-product 
	position relative
	width 270px
	border-radius 15px
	box-shadow 0px 3px 15px rgba(0, 0, 0, 0.16)
	background #FFF
	overflow hidden
	trs()
	
	&:hover
		box-shadow 3px 6px 20px rgba(0, 0, 0, 0.26)
	
	&__banner
		display block
		width 100%
		height 212px 
		
		img
			width 100%
			height 100%
			object-fit cover
		
	&__body
		padding 15px 15px 12px
	
	&__sale
		position absolute
		top 195px
		right 20px
		min-width 110px
		height 30px
		padding-left 10px
		border-radius 5px
		font 700 1.2rem/3rem font-second
		color: #FFF
		background green
		box-shadow 0px 3px 6px rgba(0, 0, 0, 0.16)
	
		&--pink
			background pink
			
	&__weight
		margin-bottom 5px
		font-weight 600
		color brown-light
	
	&__title
		display inline-block
		min-height 38px
		margin-bottom 5px
		font-weight 600
		line-height 1.9rem
		
	&__descr
		margin-bottom 8px
		font-size 1.5rem
		font-style italic
		line-height 2.4rem
	
	&__box
		display flex
		justify-content space-between
		align-items flex-end
		margin-bottom 20px
	
	&__price
		font-size 1.8rem
		color orange-dark
		font-weight 600
		
		b 
			font-weight 700
			font-size 2.4rem
			vertical-align baseline
		
	&__close
		width 25px
		height 25px
		fill #D5D5D5
		trs()
		
		&:hover
			cursor pointer
			fill orange-dark
		
	// horizontal view
	&--horizontal
		display inline-flex
		align-items center
		width 100%
		
		.card-product
			
			&__banner 
				position relative
				width 190px
				height 150px
				margin-left 20px
				
				span
					content ''
					position absolute
					top 0
					left -20px
					height 100%
					width calc(100% + 20px)
					padding-top 17px
					padding-left 17px
					background-color: rgba(0, 0, 0, .3)
					transform scale(0)
					opacity 0
					trs(all .3s)
					
					svg 
						width 35px
						height 35px
						fill #FFF
					
				&:hover span
					transform scale(1)
					opacity 1
				
			&__body
				display inline-flex
				justify-content space-between
				align-items center
				width calc(100% - 210px)
				padding-left 18px
				padding-right 30px
				
			&__info
				max-width calc(100% - 285px)
				
			&__title
				margin-bottom 10px
				min-height auto
				font-size 1.5rem
				
			&__box
				display inline-flex
				justify-content space-between
				align-items center
				width 100%
				max-width 285px
				margin-bottom 0
		

	+width-md()
	
		&--horizontal .card-product
				
				&__body
					align-items flex-end
					padding-right 15px
				
				&__info
					max-width calc(100% - 130px)
					
				&__box
					flex-direction column
					max-width 120px
					align-items flex-end
					
				&__price
					order 1
					margin-top 20px
					
				&__close
					position absolute
					top 15px
					right 15px
					

	+width-sm()
	
		&--horizontal 
			flex-direction column
			.card-product
				
				&__body
					align-items flex-start
					width 100%
										

	+width-xs()
	
		&--horizontal 
			padding-top 25px
			
			.card-product
				
				&__body
					flex-direction column
					padding-bottom 30px
				
				&__info
					max-width 100%
				
				&__box
					flex-direction row
					max-width 100%
					margin-top 15px
					
					
					
					
				
				
