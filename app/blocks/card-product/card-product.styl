.card-product 
	position relative
	width 270px
	border-radius 15px
	box-shadow 0px 3px 15px rgba(0, 0, 0, 0.16)
	background #FFF
	overflow hidden
	
	&__banner
		height 212px 
		
	&__body
		padding 15px 15px 12px
	
	&__sale
		position absolute
		top 195px
		right 20px
		min-width 110px
		height 30px
		padding-left 10px
		border-radius 5px
		font 700 1.2rem/3rem font-second
		color: #FFF
		background pink
		box-shadow 0px 3px 6px rgba(0, 0, 0, 0.16)

	&__weight
		margin-bottom 5px
		font-weight 600
		color brown-light
	
	&__title
		min-height 38px
		margin-bottom 15px
		font-weight 600
		line-height 1.9rem
	
	&__box
		display flex
		justify-content space-between
		align-items center
		margin-bottom 20px
	
	&__price
		font-weight 700
		font-size 2.4rem
		color orange-dark
