.card-sort
	position relative
	width: 270px;
	border-radius: 20px;
	background: #fff;
	box-shadow: 0px 3px 15px rgba(0, 0, 0, 0.16);
	overflow hidden

	&__icon
		position absolute
		top 18px
		left 20px
		width 35px
		height 35px
		fill brown-light
		
	&__title
		padding 15px 20px 20px 30px
		font-weight 600
		color #242424
