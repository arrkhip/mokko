.card-sort
	position relative
	width: 270px;
	border-radius: 20px;
	background: #fff;
	box-shadow: 0px 3px 15px rgba(0, 0, 0, 0.16);
	overflow hidden
	trs()
		
	&:hover
		box-shadow: 3px 7px 20px 3px rgba(0, 0, 0, 0.2);
	
	&__link
		position absolute
		top 0
		left 0
		width 100%
		height 100%	
		
	&__icon
		position absolute
		top 18px
		left 20px
		width 35px
		height 35px
		fill brown-light
		
	&__title
		padding 15px 20px 20px 30px
		font-weight 600
		color #242424
