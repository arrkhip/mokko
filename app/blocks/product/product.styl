.product
	display flex
	justify-content space-between
	
	&__slider,
	&__info
		width calc(50% - 15px)
		

	&__title
		font-size 2.2rem
		font-weight 600
		line-height 2.4rem
			
	&__box
		display flex
		justify-content space-between
		align-items flex-end
		width 235px
		padding-top 30px
		padding-bottom 25px
			
	&__price
		font-size 2.4rem
		line-height 2.9rem
		color orange-dark

	&__btn
		max-width 235px
		margin-bottom 50px
			
	&__feature
		margin-bottom 50px
		
		ul 
			padding-top 20px
		
		li:not(:last-child) 
			margin-bottom 10px
					
	&__descr
		
		p
			padding-top 20px
			line-height 2.4rem
	
	&__slider
	
		&-top
			.swiper-slide
				max-width 580px
		
		&-thumbs
			padding 15px 10px
		
			.swiper-slide
				width 170px
				height auto
				border-radius 15px
				box-shadow 0px 3px 15px rgba(0, 0, 0, 0.16)
				overflow hidden
				cursor pointer
				
				span
					content ''
					position absolute
					top 0
					left 0
					height 100%
					width 100%
					padding-top 17px
					padding-left 17px
					background-color: rgba(0, 0, 0, .3)
					transform scale(0)
					opacity 0
					trs(all .3s)
					
					svg 
						width 35px
						height 35px
						fill #FFF
					
				&:hover span
					transform scale(1)
					opacity 1
					

	+width-sm()
		flex-direction column
		
		&__slider,
		&__info
			width 100%
			
		&__slider
			margin-bottom 60px
		
	


