.file-upload
	position relative 
	overflow hidden 
	width 100% 
	max-width 570px
	height 90px 
	padding 8px 4px
	border 1px dashed #707070
	border-radius 15px
	background-color #FFF
	trs()
	
	&:hover,
	&:focus
		border-color orange
		
	&:hover
		span 
			color orange

	input[type="file"]
		display none 

	label 
		position absolute
		top 0
		left 0
		display flex
		align-items center
		justify-content center
		width 100%
		height 100%
		cursor pointer
		
	&__icon
		width 35px
		height 32px
		margin-right 15px
		fill orange

	&__title
		padding-top 5px
		line-height 2.4rem
		trs()
		
	&__path
		position absolute
		left 0
		bottom 10px
		width 100%
		text-align center
		font-size 1.2rem	
		font-style italic
		color #707070