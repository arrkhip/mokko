.slider-base
	width 100%
	padding 5px 10px 12px
	overflow hidden
	
	&__arrow
		position absolute
		top 50%
		display flex
		justify-content center
		align-items center
		width 33px
		height 65px
		background-color orange
		z-index 2
		transform translateY(-50%)
		trs()
		
		&:hover
			cursor pointer
			opacity .6
		
		svg 
			width 9px
			height 15px
			fill: #FFF

		&--prev
			left -24px
			border-top-left-radius 40px
			border-bottom-left-radius 40px
			
		&--next
			right -32px
			border-top-right-radius 40px
			border-bottom-right-radius 40px
			
			svg
				transform: rotate(180deg)
				
	+width-sm()
	
		&__arrow
			display none
		
		.swiper-wrapper
			flex-direction column
			align-items center
			
		.swiper-slide
			width 270px
			
			&:not(:last-child)
				margin-bottom 40px