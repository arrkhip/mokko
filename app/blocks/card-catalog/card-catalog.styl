.card-catalog
	display block
	width 100%
	max-width 370px
	height 190px
	padding-top 30px
	padding-left 30px
	border-radius 15px
	background-color pink-light
	background-repeat no-repeat
	background-size cover
	background-position: right top
	overflow hidden
	trs(all, .5s)
	
	&:hover
		background-color: #FFF
		box-shadow: 0px 3px 30px rgba(0, 0, 0, 0.34);
	
	&__title
		font 700 2rem/2.2rem font-second
		color brown
		
		&--sm 
			font-size 1.8rem
		
	+width-lg()
		max-width 450px
	

	+width-md()
		max-width 335px
	

	+width-sm()
		max-width 500px
		

	+width-xs()
		background-position left bottom 
	
	


