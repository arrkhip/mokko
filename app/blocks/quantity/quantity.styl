.quantity
	display flex
	align-items center
	width 90px
	height 30px
	border-radius 7px
	border 1px solid #d1d1d1

	&__minus,
	&__plus
		width 28px
		font-size 2.4rem
		font-weight 600
		text-align center
		color orange
		
		&:hover
			cursor default


	&__input
		height 100%
		width 35px
		padding 0
		border 0
		border-left 1px solid #d1d1d1
		border-right 1px solid #d1d1d1
		font-weight 600
		color #000
		text-align center
	